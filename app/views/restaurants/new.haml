.container
  = simple_form_for @restaurant, data: { turbo: false } do |f|
    = f.error_notification
    = f.input :name
    = f.input :jpn_name
    = f.input :year_opened, as: :date, start_year: Date.current.year, end_year: 1900, include_blank: true, allow_blank: true
    = f.input :station
    = f.input :city
    = f.input :prefecture
    = f.input :address
    = f.input :days_closed, as: :check_boxes, collection: Restaurant::DAYS_OF_WEEK, label: 'Days Closed', item_wrapper_class: 'checkbox', include_hidden: false
    = f.submit
