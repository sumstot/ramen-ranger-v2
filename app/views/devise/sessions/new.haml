.devise__form-container.d-flex.justify-content-center.align-items-center
  .container.mt-5.p-3.w-50.border.rounded.shadow-sm
    %h2.mb-3 Sign In
    = simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
      = f.error_notification
      .mb-3
        = f.label :email, class: 'form-label'
        = f.email_field :email, required: false, autofocus: true, autocomplete: 'email', class: 'form-control'
      .mb-3
        = f.label :username, class: 'form-label'
        = f.text_field :username, required: false, autofocus: true, autocomplete: 'username', class: 'form-control'
      .mb-3
        = f.label :password, class: 'form-label'
        = f.password_field :password, required: true, autofocus: true, autcomplete: 'current-password', class: 'form-control'
      - if devise_mapping.rememberable?
        .mb-3
          = f.check_box :remember_me, as: :boolean
          = f.label :remember_me, class: 'pl-2'
      .mb-3
        = link_to 'Forgot Password?', new_user_password_path
      .mb-3.d-flex.align-items-center.justify-content-center
        = f.submit 'Log In üçú', class: 'btn btn-lg btn-primary rounded-pill'
